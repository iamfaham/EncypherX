generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  passwords Password[]
  sharedPasswords SharedPassword[]
}

model Password {
  id          String   @id @default(cuid())
  title       String
  username    String
  password    String
  url         String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  sharedWith  SharedPassword[]
}

model SharedPassword {
  id         String   @id @default(cuid())
  password   Password @relation(fields: [passwordId], references: [id])
  passwordId String
  sharedWith User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())

  @@unique([passwordId, userId])
}